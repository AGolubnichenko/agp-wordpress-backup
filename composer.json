{
    "repositories": [
        {
            "type":"git",
            "url":"https://github.com/AGolubnichenko/agp-core/"
        }
    ],    
    "require" : {
        "agp/agp-core": "2.*",
        "ifsnop/mysqldump-php": "2.*",
        "dropbox/dropbox-sdk": "1.1.*"
    },
    "autoload": {
        "psr-4": {
            "Agp\\Plugin\\Awb\\": "classes/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "rm -rf vendor/**/**/.git",
            "grep -rl 'Agp' ./vendor/ | xargs sed -i 's/Agp\\\\Core/Awb\\\\Core/g'",
            "grep -rl 'Agp' ./vendor/ | xargs sed -i 's/Agp\\\\\\\\Core/Awb\\\\\\\\Core/g'"
        ]
    }
}