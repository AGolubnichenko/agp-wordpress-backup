{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "agp/agp-core",
                "version": "2.0.0",
                "source": {
                    "url": "https://github.com/AGolubnichenko/agp-core/",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-4": {
                        "Awb\\Core\\": "src/classes/"
                    },
                    "files": ["src/classes/Agp.php"]
                }
            }                        
        }
    ],    
    "require" : {
        "agp/agp-core": "2.*",
        "ifsnop/mysqldump-php": "2.*",
        "dropbox/dropbox-sdk": "1.1.*"
    },
    "autoload": {
        "psr-4": {
            "Agp\\Plugin\\Awb\\": "classes/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm -rf vendor/**/**/.git",
            "grep -rl 'Agp' ./vendor/agp/ | xargs sed -i 's/Agp\\\\Core/Awb\\\\Core/g'"
        ],
        "post-install-cmd": [
            "rm -rf vendor/**/**/.git",
            "grep -rl 'Agp' ./vendor/agp/ | xargs sed -i 's/Agp\\\\Core/Awb\\\\Core/g'"
        ]
    }
}