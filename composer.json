{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "agp/agp-core",
                "version": "2.0.0",
                "source": {
                    "url": "https://github.com/AGolubnichenko/agp-core/",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-4": {
                        "Agp\\Core\\": "src/classes/"
                    }
                }
            }                        
        }
    ],    
    "require" : {
        "agp/agp-core": "2.*",
        "splitbrain/php-archive": "1.*",
        "ifsnop/mysqldump-php": "2.*",
        "dropbox/dropbox-sdk": "1.1.*"
    },
    "autoload": {
        "psr-4": {
            "Agp\\Plugin\\Awb\\": "classes/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm -rf vendor/**/**/.git"
        ],
        "post-install-cmd": [
            "rm -rf vendor/**/**/.git"
        ]
    }
}